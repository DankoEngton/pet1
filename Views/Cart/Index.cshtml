@model Cart

<h2>Cart</h2>

<table>
    <thead>
        <tr>
            <th>Drug</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Drug.Name</td>
                <td>@item.Drug.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Drug.Price * item.Quantity)</td>
                <td>
                    <form asp-action="RemoveFromCart" asp-controller="Cart">
                        <input type="hidden" name="drug.Id" value="@item.Drug.Id" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

